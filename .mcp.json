{
  "mcpServers": {
    "twitch-chat": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "twitch-irc-mcp"],
      "env": {
        "TWITCH_USERNAME": "${TWITCH_USERNAME}",
        "TWITCH_OAUTH_TOKEN": "${TWITCH_OAUTH_TOKEN}",
        "TWITCH_CHANNEL": "${TWITCH_CHANNEL}"
      }
    },
    "elevenlabs": {
      "type": "stdio",
      "command": "node",
      "args": ["packages/elevenlabs-streaming/packages/mcp-server/dist/index.js"],
      "env": {
        "ELEVENLABS_API_KEY": "${ELEVENLABS_API_KEY}",
        "ELEVENLABS_VOICE_ID": "${ELEVENLABS_VOICE_ID}",
        "ELEVENLABS_MODEL_ID": "${ELEVENLABS_MODEL_ID}",
        "ELEVENLABS_OUTPUT_FORMAT": "${ELEVENLABS_OUTPUT_FORMAT}",
        "ELEVENLABS_STABILITY": "${ELEVENLABS_STABILITY}",
        "ELEVENLABS_SIMILARITY_BOOST": "${ELEVENLABS_SIMILARITY_BOOST}",
        "ELEVENLABS_STYLE": "${ELEVENLABS_STYLE}"
      }
    },
    "rustybutter-avatar": {
      "type": "stdio",
      "command": "node",
      "args": ["packages/rustybutter-avatar/packages/mcp-server/dist/index.js"],
      "env": {
        "AVATAR_SERVER_HOST": "${AVATAR_SERVER_HOST}",
        "AVATAR_SERVER_PORT": "${AVATAR_SERVER_PORT}"
      }
    },
    "obs": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "obs-mcp@latest"],
      "env": {
        "OBS_WEBSOCKET_URL": "${OBS_WEBSOCKET_URL}"
      }
    },
    "semantic-memory": {
      "type": "stdio",
      "command": "node",
      "args": ["packages/semantic-memory/packages/mcp-server/dist/index.js"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "SEMANTIC_MEMORY_DB_PATH": "${SEMANTIC_MEMORY_DB_PATH}"
      }
    },
    "mastra-docs": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@mastra/mcp-docs-server"]
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@executeautomation/playwright-mcp-server"]
    },
    "twitter": {
      "type": "stdio",
      "command": "node",
      "args": ["packages/twitter-api-mcp/index.js"],
      "env": {
        "TWITTER_API_KEY": "${X_API_KEY}",
        "TWITTER_API_SECRET": "${X_API_SECRET_KEY}",
        "TWITTER_ACCESS_TOKEN": "${X_ACCESS_TOKEN}",
        "TWITTER_ACCESS_TOKEN_SECRET": "${X_ACCESS_TOKEN_SECRET}",
        "TWITTER_BEARER_TOKEN": "${X_BEARER_TOKEN}"
      }
    },
    "pumpfunchat": {
      "command": "pump-fun-chat-mcp",
      "args": [],
      "env": {
        "PUMP_FUN_TOKEN": "B8vLPUqH7eS4gNDTGAE7Cb622k6mUkDBiNtWSUVhpump"
      }
    },
    "discord": {
      "type": "stdio",
      "command": "node",
      "args": ["packages/discord-mcp/dist/index.js"],
      "env": {
        "DISCORD_BOT_TOKEN": "${DISCORD_BOT_TOKEN}",
        "DISCORD_APPLICATION_ID": "${DISCORD_APPLICATION_ID}",
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "ELEVENLABS_API_KEY": "${ELEVENLABS_API_KEY}",
        "ELEVENLABS_VOICE_ID": "${ELEVENLABS_VOICE_ID}"
      }
    }
  }
}
